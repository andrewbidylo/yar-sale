<body>


<%- include('partials/header') %>
<h2>ITEM DETAILS</h2>

      <article class="item-listing_1">
        <section class="item-listing__preview-image" >
          <img src="<%= items.thumbnail_photo_url %>" alt="house">
        </section>
        <section class="item-listing__details">
          <h3 class="item-listing__title"><%= items.title %></h3>
          <ul class="item-listing__details">
            <li><%= items.location %></li>
            <li><%= items.description %></li>
            <li>Date Posted: <%= items.date_posted %></li>

            <li>$<%= items.price  %></li>


            <%console.log(itemId)%>
            <% if (id == 1) { %>
              <div class="heart">
                <button>Add To Favourites</button>
                <!-- <i class="fas fa-heart"></i> -->
              </div>
<%console.log(email)%>
<button onclick=<%= `window.open("mailto:${email}")` %>>Send email to seller</button>


              <% } else if (id == 2) {%>

                 <% if (items.date_sold) { %>
                 <p>SOLD!</p>
                  <% } else { %>
                    <form action="/items/<%= itemId %>/sold" method="POST">
                      <!-- <input type="radio" id="html" name="fav_language" value="HTML"> -->
                      <button for="html">SOLD</button>
                      </form>
                  <% } %>
              <% } %>

          </ul>
        </section>
      </article>

